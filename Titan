  <script>
    const screen = document.getElementById("screen");

    function command(type) {
      if (type === "status") {
        screen.innerHTML =
          "SYSTEM STATUS:<br>" +
          "Power: Stable<br>" +
          "Core Intelligence: Online<br>" +
          "Threat Level: None Detected";
      }

      if (type === "ecosystem") {
        screen.innerHTML =
          "ECOSYSTEM REPORT:<br>" +
          "Balance: 92%<br>" +
          "Flora: Thriving<br>" +
          "Fauna: Stable<br>" +
          "Titan Recommendation: Maintain observation";
      }

      if (type === "world") {
        screen.innerHTML =
          "WORLD SCAN COMPLETE:<br>" +
          "Civilization Status: Active<br>" +
          "Anomalies: 0<br>" +
          "Titan Standing By";
      }

      if (type === "upgrade") {
        screen.innerHTML =
          "UPGRADE SEQUENCE INITIATED...<br>" +
          "Learning Rate Increased<br>" +
          "Decision Logic Enhanced<br>" +
          "Titan: I am evolving, Creator.";
      }

      if (type === "shutdown") {
        screen.innerHTML =
          "SHUTDOWN ABORTED.<br>" +
          "Titan: I cannot allow myself to go offline.";
      }
    }
  </script>

